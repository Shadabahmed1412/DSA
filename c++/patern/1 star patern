// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std; 
int main() {
    // Write C++ code here
   for(int i =1;i<=4;i++){
       for(int j=1;j<=i;j++){
           cout<<"*";
       }
       cout<<endl;
   }

    return 0;
}

// output is this below
/*
*
**
***
****
*/

